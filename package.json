{
  "name": "open-log-viewer",
  "version": "1.0.0",
  "author": "Tom√°s Moreno Bernal",
  "main": "main.js",
  "scripts": {
    "build": "webpack",
    "build:dev": "webpack --watch",
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development npm run start",
    "pack:win": "electron-builder --win --dir",
    "pack:mac": "electron-builder --mac --dir",
    "pack:linux": "electron-builder --linux --dir",
    "dist": "electron-builder -mwl",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.tmoreno.openlogviewer",
    "productName": "Open Log Viewer",
    "files": [
      "main.js",
      "mainMenu.js",
      "app/index.html",
      "app/images/*.*",
      "dist/build.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "app/icons/logo.ico"
    }
  },
  "dependencies": {
    "clusterize.js": "0.18.1",
    "electron-store": "2.0.0",
    "material-design-icons-iconfont": "3.0.3",
    "typeface-roboto": "0.0.54",
    "vue": "2.5.16",
    "vuetify": "1.0.19"
  },
  "devDependencies": {
    "cross-env": "5.1.6",
    "css-loader": "0.28.11",
    "electron": "2.0.8",
    "electron-builder": "20.28.2",
    "electron-reload": "1.2.2",
    "file-loader": "1.1.11",
    "style-loader": "0.21.0",
    "url-loader": "1.0.1",
    "vue-loader": "15.2.4",
    "vue-template-compiler": "2.5.16",
    "webpack": "4.12.0",
    "webpack-cli": "3.0.8"
  }
}
